<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const form = document.getElementById('rtoForm');
  const progressBar = document.getElementById('formProgress');
  const submitBtn = document.getElementById('submitBtn');
  const toast = new bootstrap.Toast(document.getElementById('successToast'));

  form.addEventListener('input', () => {
    const inputs = form.querySelectorAll('input, select, textarea');
    let validCount = 0;
    let totalRequired = 0;

    inputs.forEach(input => {
      if (input.required) {
        totalRequired++;
        if (input.checkValidity()) validCount++;
      }
    });

    const percent = Math.round((validCount / totalRequired) * 100);
    progressBar.style.width = percent + '%';
    progressBar.textContent = percent + '%';

    const captchaValid = document.getElementById('captcha').value == '7';
    const termsChecked = document.getElementById('terms').checked;

    submitBtn.disabled = !(validCount === totalRequired && captchaValid && termsChecked);
  });

  form.addEventListener('submit', function (event) {
    event.preventDefault();
    event.stopPropagation();

    if (!form.checkValidity() || document.getElementById('captcha').value != '7') {
      form.classList.add('was-validated');
      return;
    }

    toast.show();
    form.reset();
    progressBar.style.width = '0%';
    progressBar.textContent = '0%';
    submitBtn.disabled = true;
  });
</script>
